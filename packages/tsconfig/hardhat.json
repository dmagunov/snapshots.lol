{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "hardhat",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}
